---
import Header from "../components/layout/Header";
import Footer from "../components/layout/Footer";
import "@fontsource-variable/heebo";
export interface Props {
  title: string;
  pathname: "/dergiler" | "/yazarlar" | "/iletisim" | "/yazilar" | "/";
}

const { title, pathname } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Klasik dergilerin ötesinde bir dijital deneyim! Kültürden sanata, teknolojiden mistik olaylara... "
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Header pathname={pathname} client:idle />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  /* https: //docs.astro.build/en/guides/fonts/ */
  body {
    font-family: "Heebo Variable", sans-serif;
  }
</style>
